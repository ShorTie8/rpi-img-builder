#!/bin/bash
### DO NOT EDIT
BRED="\e[1;31m"
RED="\e[0;31m"
FIN="\e[0m"
user=""
passwd=""
DISTRO_VERSION="buster"
VERSION=""
mainline="0"
menuconfig="0"
crosscompile="1"
debian="1"
devuan="0"
ubuntu="0"
rtl88XXau="0"
rtl88X2bu="0"
rtl88XXcu="0"

# open fd
exec 3>&1

# Store data to $VALUES variable
VALUES=$(dialog --ok-label "Submit" --no-cancel \
	  --backtitle "Create a Mainline user data file" \
	  --title "Config Menu" \
	  --form "Choose:" \
24 40 17 \
	"Username:"	1 1	"$user" 		1 11 14 0 \
	"Password:"	2 1	"$passwd"  		2 11 14 0 \
        "Branch:"   	3 1     "$VERSION"        	3 9 10 0 \
        "Mainline:"	4 1     "$mainline"             4 11 2 0 \
	"Menuconfig:"	5 1	"$menuconfig"  		5 13 2 0 \
	"Crosscompile:" 6 1	"$crosscompile" 	6 15 2 0 \
	""		7 1	""	 		7 14 0 0 \
	"Distributions"	8 1	""	 		8 14 0 0 \
	"Release:"	9 1	"$DISTRO_VERSION"  	9 10 15 0 \
	"Debian:"	10 1	"$debian" 		10 9 2 0 \
	"Devuan:"	11 1	"$devuan" 		11 9 2 0 \
	"Ubuntu:"	12 1	"$ubuntu"	 	12 9 2 0 \
	""		13 1	""	 		13 14 0 0 \
	"Wireless"	14 1	""	 		14 14 0 0 \
	"rtl88XXau:"	15 1	"$rtl88XXau"	 	15 12 2 0 \
	"rtl88X2bu:"	16 1	"$rtl88X2bu"	 	16 12 2 0 \
	"rtl88XXcu:"	17 1	"$rtl88XXcu"	 	17 12 2 0 \
2>&1 1>&3)

# close fd
exec 3>&-

# convert into vars
echo "$VALUES" > tmp1
echo user='"' > tmp0
echo passwd='"' >> tmp0
echo VERSION='"' >> tmp0
echo mainline= >> tmp0
echo menuconfig= >> tmp0
echo crosscompile= >> tmp0
echo DISTRO_VERSION='"' >> tmp0
echo debian= >> tmp0
echo devuan= >> tmp0
echo ubuntu= >> tmp0
echo rtl8812au= >> tmp0
echo rtl88x2bu= >> tmp0
echo rtl8811cu= >> tmp0
echo custom_defconfig=0 >> tmp0
echo MYCONFIG='"'nameofyour_defconfig'"' >> tmp0
echo verbose=0 >> tmp0
echo devuser=1 >> tmp0
echo '"' > tmp2
echo '"' >> tmp2
echo '"' >> tmp2
echo >> tmp2
echo >> tmp2
echo >> tmp2
echo '"' >> tmp2
paste -d '\0' tmp0 tmp1 tmp2  > userdata.txt
rm -f tmp0 tmp1 tmp2

# clear screen
clear

# userdata
echo -e "${RED}userdata file created${FIN}."
